# Dynamic theme colors
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"

# Font
font-family = "JetBrainsMono Nerd Font"
font-style = Regular
font-size = 12

# Window
window-theme = ghostty
window-padding-x = 14
window-padding-y = 14
confirm-close-surface=false
resize-overlay = never
gtk-toolbar-style = flat

# Cursor styling
cursor-style = "block"
cursor-style-blink = false

# Cursor styling + SSH session terminfo
# (all shell integration options must be passed together)
shell-integration-features = no-cursor,ssh-env

# Keyboard bindings - Clipboard
keybind = shift+insert=paste_from_clipboard
keybind = control+insert=copy_to_clipboard

# Split pane creation (CTRL+SHIFT+arrows - tested working pattern)
keybind = ctrl+shift+right=new_split:right
keybind = ctrl+shift+down=new_split:down
keybind = ctrl+shift+left=new_split:left
keybind = ctrl+shift+up=new_split:up
keybind = super+t=new_tab
keybind = super+w=close_surface

# Vim-style split navigation (ALT+hjkl for consistency with Hyprland)
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

# Split resizing (CTRL+ALT+hjkl)
keybind = ctrl+alt+h=resize_split:left,10
keybind = ctrl+alt+j=resize_split:down,10
keybind = ctrl+alt+k=resize_split:up,10
keybind = ctrl+alt+l=resize_split:right,10

# Tab navigation
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
