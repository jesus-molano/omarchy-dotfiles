# Dynamic theme colors
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"

# Font
font-family = "JetBrainsMono Nerd Font"
font-style = Regular
font-size = 12

# Window
window-theme = ghostty
window-padding-x = 14
window-padding-y = 14
confirm-close-surface=false
resize-overlay = never
gtk-toolbar-style = flat

# Cursor styling
cursor-style = "block"
cursor-style-blink = false

# Cursor styling + SSH session terminfo
# (all shell integration options must be passed together)
shell-integration-features = no-cursor,ssh-env

# Keyboard bindings - Clipboard
keybind = shift+insert=paste_from_clipboard
keybind = control+insert=copy_to_clipboard

# Split pane creation
# Using Alt instead of Super to avoid conflicts with Hyprland
keybind = alt+d=new_split:right
keybind = alt+shift+d=new_split:down
keybind = alt+t=new_tab
keybind = alt+w=close_surface

# Vim-style split navigation (Ctrl+hjkl)
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

# Split resizing (Alt+Shift instead of Super)
keybind = alt+ctrl+h=resize_split:left,10
keybind = alt+ctrl+j=resize_split:down,10
keybind = alt+ctrl+k=resize_split:up,10
keybind = alt+ctrl+l=resize_split:right,10

# Tab navigation (Alt instead of Super)
keybind = alt+1=goto_tab:1
keybind = alt+2=goto_tab:2
keybind = alt+3=goto_tab:3
keybind = alt+4=goto_tab:4
keybind = alt+5=goto_tab:5
